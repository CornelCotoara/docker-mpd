{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "mpd"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "k8s-app": "mpd"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "k8s-app": "mpd"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "mpd",
            "image": "randomcoww/mpd:latest",
            "ports": [
              {
                "containerPort": 8000,
                "protocol": "TCP"
              },
              {
                "containerPort": 6600,
                "protocol": "TCP"
              }
            ],
            "volumeMounts": [
              {
                "mountPath": "/mpd/music",
                "name": "glusterfsvol"
              },
              {
                "mountPath": "/mpd/cache",
                "name": "mpd-pvc"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "glusterfsvol",
            "glusterfs": {
              "endpoints": "glusterfs-cluster",
              "path": "music",
              "readOnly": true
            }
          },
          {
            "name": "mpd-pvc",
            "persistentVolumeClaim": {
              "claimName": "mpd-pvc"
            }
          }
        ]
      }
    }
  }
}
